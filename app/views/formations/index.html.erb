<div class="site-headers">
  <h1> Manage Playbook </h1>
  <h4> Create a Format<span class="logo-color">i</span>on and Upload PDFs to Your Formation</h4>
</div>

<table class="tables">
  <thead>
    <tr>
      <th>Name</th>
      <th>Uploaded</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
    <% @formations.each do |formation| %>
      <tr>
        <td><%= formation.name %></td>
        <td><%= formation.created_at.strftime('%B %d, %Y') %></td>
        <td><%= link_to 'Show Plays', formation.pdf_file.url, remote: true, class: "pdf-lightbox" %></td>
        <td><%= link_to 'Edit', edit_formation_path(formation) %></td>
        <td><%= link_to 'Destroy', formation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div id="show-plays"></div>

<%= link_to 'New Formation', new_formation_path %>
