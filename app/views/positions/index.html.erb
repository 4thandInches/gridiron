<div class="depth-chart">
  <div class="cards">
    <% @positions.each do |position| %>
    <div class="card">
      <div class="card-image">
        <img src='<%= asset_path("position_#{position.id}.jpg") %>' alt="">
      </div>
      <div class="card-header">
        <%= position.name %>
      </div>
      <div class="card-copy">
        <ul class="sortable">
        <% position.get_team_players(@team).each do |player| %>
          <% player.roles.where(position_id: position.id).each do |r| %>
            <li class="ui-state-default", data-id="<%= r.id %>"><%= link_to "#{r.get_player_name}", show_stats_player_path(r.get_player) %></li>
          <% end %>
        <% end %>
      </ul>
      </div>
    </div>
    <% end %>
</div>
