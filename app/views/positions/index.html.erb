<p id="notice"><%= notice %></p>

<h1>Listing Positions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="1"></th>
      <th>Player</th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.name %></td>
        <td><%= link_to 'Show Players', position %></td>
        <td><% position.players.each do |player| %>
          <p><%= capitalize_name(player.first_name, player.last_name) %></p>
            <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Position', new_position_path %>
