<div id="player-name">
  <h3> <%= @player.positions.first.name %> <%= @player.first_name %> <%= @player.last_name %></h3>
</div>
<% @games.each do |g| %>
  <div class="show-player-stats">
    <table class="tables">
      <h3><%= g.opponent %></h3>
      <thead>
        <tr>
      <% g.stats.where(player_id: @player.id).each do |s| %>
          <th><%= s.stat_type.name %></td>
      <% end %>
        </tr>
      </thead>
        <tr>
      <% g.stats.where(player_id: @player.id).each do |s| %>
         <td><%= s.value %></td>
      <% end %>
        </tr>
    </table>
  </div>
<% end %>
