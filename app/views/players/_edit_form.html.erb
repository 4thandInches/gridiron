<div class="site-headers">
  <h1>Roster</h1>
  <h4>Create and Edit Player Information </h4>
</div>
<div class="edit-container">
    <%= form_for(@player) do |f| %>
      <% if @player.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

          <ul>
          <% @player.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :first_name %><br>
        <%= f.text_field :first_name, placeholder:"First Name" %>
      </div>
      <div class="field">
        <%= f.label :last_name %><br>
        <%= f.text_field :last_name, placeholder:"Last Name" %>
      </div>
      <div class="field">
        <%= f.label :jersey_number %><br>
        <%= f.number_field :jersey_number, placeholder:"Jersey Number" %>
      </div>
      <div class="field">
        <%= f.label :phone_number %><br>
        <%= f.text_field :phone_number, placeholder:"Phone Number" %>
      </div>
      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email, placeholder:"Email" %>
      </div>
      <div class="field">
        <%= f.label :weight %><br>
        <%= f.text_field :weight, placeholder:"Weight" %>
      </div>
      <div class="field">
        <%= f.label :height %><br>
        <%= f.text_field :height, placeholder:"Height" %>
      </div>
      <div class="field">
        <%= f.label :class_status_id %><br>
        <%= f.collection_select :class_status_id, @class_statuses.to_a.collect, :id, :name %>
      </div>


      <div class="actions">
        <%= f.submit %>
      </div>

    <% end %>
</div>
