<p id="notice"><%= notice %></p>

<h1>Listing Players</h1>

<table class="tables">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Jersey number</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Weight</th>
      <th>Height</th>
      <th>Position</th>
      <th>Class status</th>
      <th colspan="3">Table Options</th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.first_name %></td>
        <td><%= player.last_name %></td>
        <td><%= player.jersey_number %></td>
        <td><%= player.phone_number %></td>
        <td><%= player.email %></td>
        <td><%= player.weight %></td>
        <td><%= player.height %></td>
        <td><%= player.positions.first.name %></td>
        <td><%= player.class_status.name %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to "Show Stats", show_stats_player_path(player) %></td>
        <td><%= link_to "Add Stats", stats_player_path(player) %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

