<div id="game-stats">
<h1>VS. <%= Game.find(id).opponent %></h1>
  <%= form_tag("/games/#{id}/make_game_stats") do %>

    <% stat_types.each do |s| %>
      <div class="field">
        <%= label_tag s.name %>
        <%= text_field_tag "stat[#{s.id}]"%>
      </div>

    <% end %>
  <div class="team-stat-submit">
    <%= submit_tag "Submit Stats" %>
  </div>
  <% end %>
</div>
