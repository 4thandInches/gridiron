<div class="site-headers">
  <h1>Edit Game</h1>
  <h4>Input Game Information</h4>
</div>

<div class="edit-container">
    <%= form_for(@game) do |f| %>
      <% if @game.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

          <ul>
          <% @game.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :opponent %><br>
        <%= f.text_field :opponent, placeholder: "Opponent" %>
      </div>
      <div class="field">
        <%= f.label :location %><br>
        <%= f.text_field :location, placeholder: "Location" %>
      </div>
      <div class="field">
        <%= f.label :date %><br>
        <%= f.text_field :time, class: "datepicker", placeholder: "Date" %>
      </div>

      <div class="field">
        <%= f.label :home %><br>
        <%= f.check_box :home %>
      </div>
      <div class="actions">
        <%= f.submit %>
        <%= link_to '<i class="fa fa-times fa-2x"></i>'.html_safe, @game, method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete'%>
      </div>
    <% end %>
</div>
