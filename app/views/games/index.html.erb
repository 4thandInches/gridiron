<table class="tables">
  <thead>
    <tr>
      <th>Date</th>
      <th>Opponent</th>
      <th>Location</th>
      <th>Time</th>
      <th>Home/Away</th>
      <th colspan="4"> Options</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= (game.time).strftime("%D") %></td>
        <td>
          <% if game.home %>
          <%= "vs. #{game.opponent}" %>
          <% else %>
          <%= "@ #{game.opponent}" %>
          <% end %>
        </td>
<
        <td>
          <%= game.location %>
        </td>
        <td><%= (game.time).strftime("%l:%M PM") %></td>

        <td>
          <% if game.home %>
          <%= "Home" %>
          <% else %>
          <%= "Away" %>
          <% end %>
        </td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Add Player Stats', player_stats_game_path(game)%></td>
        <td>

          <div class="modal">
            <label for="modal-<%=game.id%>">
              <div class="modal-trigger">Add Team Stats</div>
            </label>
            <input class="modal-state" id="modal-<%=game.id%>" type="checkbox" />
            <div class="modal-fade-screen">
              <div class="modal-inner">
                <div class="modal-close" for="modal-<%=game.id%>"></div>
                <%= render partial: 'games/game_stats', locals: { id: game.id, stat_types: @stat_types} %>
              </div>
            </div>
          </div>

        </td>
        <td><%= link_to '<i class="fa fa-pencil-square-o fa-2x"></i>'.html_safe, edit_game_path(game) %>  <%= link_to '<i class="fa fa-times fa-2x"></i>'.html_safe, game, method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete'%> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="form-button"><%= link_to 'New Game' '<i class="fa fa-plus-square"></i>'.html_safe, new_game_path %> </button>
