


<table class="tables">
  <thead>
    <tr>
      <th>Opponent</th>
      <th>Location</th>
      <th>Time</th>
      <th>Home</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.opponent %></td>
        <td><%= game.location %></td>
        <td><%= game.time %></td>
        <td><%= game.home %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Add Player Stats', player_stats_game_path(game)%></td>
        <td><%= link_to 'Add Game Stats', game_stats_game_path(game) %>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
<p id="notice"><%= notice %></p>
