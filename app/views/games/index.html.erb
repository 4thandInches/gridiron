


<table class="tables">
  <thead>
    <tr>
      <th>Opponent</th>
      <th>Location</th>
      <th>Time</th>
      <th>Home</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.opponent %></td>
        <td>
          <% if game.home %>
          <%= game.location %>
          <% else %>
          <%= "@ #{game.location}" %>
          <% end %>
        </td>
        <td><%= (game.time).strftime("%B ") %></td>
        <td><%= game.home %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Add Stats', stats_game_path(game)%></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
<p id="notice"><%= notice %></p>
