<div id="schedule-dashboard">
  <table id="js-fadeInElement" class="tables table-homepage fade-in-element " >
    <thead>
      <tr>
        <th>Opponent</th>
        <th>Location</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
    <% @games.each do |game| %>
      <tr>
        <td> <%= game.opponent %> </td>
        <td> <%= game.location %> </td>
        <td> <%# (game.time).strftime("%D") %> </td>
      </tr>
    <% end %>
