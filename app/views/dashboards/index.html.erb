<div id="js-parallax-window" class="parallax-window">
  <div class="parallax-static-content">
    <h1>Get an Overview of Your Team on This Page</h1>
  </div>
  <div id="js-parallax-background" class="parallax-background"></div>
</div>


<div id="stat-dashboard">
  <h1> Single Game Leaders</h1>

  <h3 class="lead-category"> Leading Passer</h3> <br>
  <%  lead_pass = Stat.where(stat_type_id: 1)  %>
  <%  lead_pass = lead_pass.order(:value).last  %>
  <p class="potato-category">
    <%= Player.find_by_id(lead_pass.player_id).first_name %>
    <%= Player.find_by_id(lead_pass.player_id).last_name %>
    <%= lead_pass.value.to_i  %> yards
  </p>
</div>


  <div id="schedule-dashboard">
    <table id="js-fadeInElement" class="tables table-homepage fade-in-element" >
      <thead>
        <tr>
          <th>Opponent</th>
          <th>Location</th>
          <th>Date</th>
        </tr>
      </thead>


      <tbody>
        <% Game.all.each do |game| %>
          <tr>
            <td> <%= game.opponent %> </td>
            <td> <%= game.location %> </td>
            <td> <%= game.time %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>



