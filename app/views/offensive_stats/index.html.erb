<p id="notice"><%= notice %></p>

<h1>Listing Offensive Stats</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">Passing yards </th>
      <th colspan="3">Passing attempts</th>
      <th colspan="3">Pass completions</th>
      <th colspan="3">Completion percentage</th>
      <th colspan="3">Twenty pass</th>
      <th colspan="3">Passing td</th>
      <th colspan="3">Longest pass</th>
      <th colspan="3">Sacks</th>
      <th colspan="3">Interceptions</th>
      <th colspan="3">Rushing yards</th>
      <th colspan="3">Longest rush</th>
      <th colspan="3">Rushing attempts</th>
      <th colspan="3">Twenty rush</th>
      <th colspan="3">Average yards rush</th>
      <th colspan="3">Rushing td</th>
      <th colspan="3">Fumbles</th>
      <th colspan="3">Receiving yards</th>
      <th colspan="3">Receptions</th>
      <th colspan="3">Targets</th>
      <th colspan="3">Drops</th>
      <th colspan="3">Receiving td</th>
      <th colspan="3">Twenty reception</th>
      <th colspan="3">Longest reception</th>
      <th colspan="3">Average reception</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offensive_stats.each do |offensive_stat| %>
      <tr>
        <td colspan="3"><%= offensive_stat.passing_yards %></td>
        <td colspan="3"><%= offensive_stat.passing_attempts %></td>
        <td colspan="3"><%= offensive_stat.pass_completions %></td>
        <td colspan="3"><%= offensive_stat.completion_percentage %></td>
        <td colspan="3"><%= offensive_stat.twenty_pass %></td>
        <td colspan="3"><%= offensive_stat.passing_td %></td>
        <td colspan="3"><%= offensive_stat.longest_pass %></td>
        <td colspan="3"><%= offensive_stat.sacks %></td>
        <td colspan="3"><%= offensive_stat.interceptions %></td>
        <td colspan="3"><%= offensive_stat.rushing_yards %></td>
        <td colspan="3"><%= offensive_stat.longest_rush %></td>
        <td colspan="3"><%= offensive_stat.rushing_attempts %></td>
        <td colspan="3"><%= offensive_stat.twenty_rush %></td>
        <td colspan="3"><%= offensive_stat.average_yards_rush %></td>
        <td colspan="3"><%= offensive_stat.rushing_td %></td>
        <td colspan="3"><%= offensive_stat.fumbles %></td>
        <td colspan="3"><%= offensive_stat.receiving_yards %></td>
        <td colspan="3"><%= offensive_stat.receptions %></td>
        <td colspan="3"><%= offensive_stat.targets %></td>
        <td colspan="3"><%= offensive_stat.drops %></td>
        <td colspan="3"><%= offensive_stat.receiving_td %></td>
        <td colspan="3"><%= offensive_stat.twenty_reception %></td>
        <td colspan="3"><%= offensive_stat.longest_reception %></td>
        <td colspan="3"><%= offensive_stat.average_reception %></td>
        <td colspan="3"><%= link_to 'Show', offensive_stat %></td>
        <td colspan="3"><%= link_to 'Edit', edit_offensive_stat_path(offensive_stat) %></td>
        <td colspan="3"><%= link_to 'Destroy', offensive_stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr> colspan=3"
    <% end %>
  </tbody>
</table>

