
<div class="site-headers">
  <h1>Itineraries</h1>
  <h4>Create It<span class="logo-color">i</span>neraries for Practice and Team Events</h4>
</div>


<div class="itinerary-container">
  <% @itineraries.each do |itinerary|  %>
    <div class="a-card">
      <div class="aheader">
        <h1 ><%= link_to itinerary.name, itinerary  %>
          <div class="right-icon"><%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_itinerary_path(itinerary) %></div>
        </h1>
      </div>
      <div class="somecontent">
        <% itinerary.situations.each do |s| %>
          <section>
            <aside><%= s.time %></aside>
            <article><%= s.task %></article>
          </section>
        <% end  %>

      </div>
    </div>
  <% end %>
  <div id="itinerary-button">
    <%= link_to '<button>New Itinerary</button>'.html_safe, new_itinerary_path %>
  </div>
</div>
