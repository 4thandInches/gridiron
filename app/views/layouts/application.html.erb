<!DOCTYPE html>
<html>
<head>
  <title>Gridiron</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.5/d3.min.js" charset="utf-8"></script>

</head>
<body>

<!--navbar begin-->
<header class="navigation" role="banner">
  <div class="navigation-wrapper">
    <a href="javascript:void(0)" class="logo">
      <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_1.png" alt="Logo Image">
    </a>
    <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">MENU</a>

    <nav role="navigation">
      <% if user_signed_in? && current_user.team_id %>
      <ul id="js-navigation-menu" class="navigation-menu show">
        <li class="nav-link"><%= link_to "Home", root_path %> </li>
        <li class="nav-link"><%= link_to "Roster", players_path %> </li>
        <!-- <li class="nav-link"><%= link_to "Player Stats", players_path %></li> -->
        <li class="nav-link"><%= link_to "Depth Chart", positions_path %></li>
        <li class="nav-link"><%= link_to "Stat Center", games_path %></li>
        <li class="nav-link"><%= link_to "Calendar", calendars_index_path %></li>
        <li class="nav-link"><%= link_to "Manage Itineraries", itineraries_path %></li>


        <li class="nav-link"><%= link_to "Sign out", destroy_user_session_path, method: :delete %> </li>
        <% end %>


        <li class="nav-link">
          <% if user_signed_in? %>
            Signed in as <%= current_user.email %>
          <% end %>
        </li>

      </ul>
    </nav>
  </div>

</header>




    <%= yield %>


</body>
</html>
